<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
      <ol class="journals">
        <% @journals.each do |journal| %>
          <li>
            <%= link_to gravatar_for(journal.user, size: 50), journal.user %>
            <span class="user"><%= link_to journal.user.name, journal.user %></span>
            <span class="content">
              <strong><em><%= journal.title %></em></strong>
              <%= journal.content %>
            </span>
            <span class="timestamp">
              Posted <%= time_ago_in_words(journal.created_at) %> ago.
            </span>
          </li>
        <% end %>
      </ol>
      <%= will_paginate @journals %>
  </div>
</div>
