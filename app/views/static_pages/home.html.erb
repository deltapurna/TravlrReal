<% provide :page_title, 'Home' %>

<% if current_user %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="journal_form">
        <%= form_for(@journal, remote: true) do |f| %>
          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.label :content %>
          <%= f.text_area :content %>

          <%= f.submit 'Create Journal', class: 'btn btn-primary' %>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Last 10 Journals</h3>
      <ol class="journals">
        <%= render @journals %>
      </ol>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Selamat Datang ke Travlr</h1>
    <h2>
      This is the home page for the Travlr application.
    </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
